<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_competitions/models/fields"
	>
		<field name="id" 
                       type="text" 
                       default="0"
                       readonly="true" 
                       class="readonly"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description ="JGLOBAL_FIELD_ID_DESC"
                />
                
                <field name="id_pilot" 
                       type="pilotresult"
                       label="COM_COMPETITIONS_FIELD_PILOT_LABEL"
                />
                
                <field name="id_team" 
                       type="teampilot" 
                       label="JFIELD_ID_TEAM_LABEL"
                />
                
                <field name="position_grid"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_POSITION_GRID"
                       maxlength="2"
                />
                
		<field name="position"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_POSITION"
                       maxlength="2"
                />
                
                <field name="best_lap"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_BEST_LAP"
                       maxlength="9"
                />
                
                <field name="position_best_lap"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_POSITION_BEST_LAP"
                       maxlength="2"
                />
                
                <field name="turns"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_TURNS"
                />
                
                <field name="points"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_POINTS"
                       maxlength="2"
                />
                
                <field name="deductions"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_DEDUCTIONS"
                       maxlength="2"
                />
                
                <field name="desc_deductions"
                       type="textarea" 
                       class="inputbox"
                       rows="5" 
                       cols="20" 
                       label="JGLOBAL_DESC_DEDUCTIONS"
                />
                
                <field name="full_time"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_FULL_TIME"
                       maxlength="12"
                />
                
                <field name="difference_time"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_DIFFERENCE_TIME"
                       maxlength="12"
                />
                
                <field name="ballast_number"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_BALLAST_NUMBER"
                       maxlength="2"
                />
                
                <field name="pilot_weight"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JGLOBAL_PILOT_WEIGHT"
                       maxlength="7"
                />
                
                <field name="id_stage" 
                       type="stageresult"
                       label="COM_COMPETITIONS_FIELD_STAGE_LABEL"
                />
                
                <field name="published" 
                        type="list" 
                        label="JSTATUS" 
                        class="inputbox" 
                        size="1" 
                        default="1">
                    
                     <option value="1">JPUBLISHED</option>
                     <option value="0">JUNPUBLISHED</option>
                     <option value="2">JARCHIVED</option>
                     <option value="-2">JTRASHED</option>

                 </field>
                
                              
	</fieldset>
        <fieldset name="publish"
		label="COM_COMPETITIONS_GROUP_LABEL_PUBLISHING_DETAILS"
	>

		<field name="created" type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_Desc"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
                
                <field name="created_by" 
                        type="user" 
                        label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
                        description="JGLOBAL_FIELD_CREATED_BY_Desc" 
                 />

		<field name="publish_up" type="calendar"
			label="COM_COMPETITIONS_FIELD_PUBLISH_UP_LABEL" description="COM_COMPETITIONS_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_COMPETITIONS_FIELD_PUBLISH_DOWN_LABEL" description="COM_COMPETITIONS_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

	</fieldset>
</form>

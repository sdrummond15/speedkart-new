<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_competitions/models/fields"
	>
		<field name="id" 
                       type="text" 
                       default="0"
                       readonly="true" 
                       class="readonly"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description ="JGLOBAL_FIELD_ID_DESC"
                />
                
                <field name="id_pilot" 
                       type="pilotpreviou"
                       label="COM_COMPETITIONS_FIELD_PILOT"
                />
                
                <field name="qtd_racing"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_RACING"
                       maxlength="3"
                />
                
                <field name="qtd_1"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_1"
                       maxlength="3"
                />
                
                <field name="qtd_2"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_2"
                       maxlength="3"
                />
                
                <field name="qtd_3"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_3"
                       maxlength="3"
                />
                
                <field name="qtd_4"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_4"
                       maxlength="3"
                />
                
                <field name="qtd_5"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_5"
                       maxlength="3"
                />
                
                <field name="qtd_best_lap"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_QTD_BEST_LAP"
                       maxlength="3"
                />
                
                <field name="qtd_best2_5"
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JGLOBAL_BEST2_5"
                       maxlength="3"
                />
                
                <field name="historic"
                       type="textarea" 
                       class="inputbox"
                       rows="5" 
                       cols="20" 
                       label="JGLOBAL_HISTORIC"
                       description = "DESC_HISTORIC"
                />
                
                <field name="published" 
                        type="list" 
                        label="JSTATUS" 
                        class="inputbox" 
                        size="1" 
                        default="1">
                    
                     <option value="1">JPUBLISHED</option>
                     <option value="0">JUNPUBLISHED</option>
                     <option value="2">JARCHIVED</option>
                     <option value="-2">JTRASHED</option>

                 </field>
                
                              
	</fieldset>
        <fieldset name="publish"
		label="COM_COMPETITIONS_GROUP_LABEL_PUBLISHING_DETAILS"
	>

		<field name="created" type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_Desc"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
                
                <field name="created_by" 
                        type="user" 
                        label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
                        description="JGLOBAL_FIELD_CREATED_BY_Desc" 
                 />

		<field name="publish_up" type="calendar"
			label="COM_COMPETITIONS_FIELD_PUBLISH_UP_LABEL" description="COM_COMPETITIONS_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_COMPETITIONS_FIELD_PUBLISH_DOWN_LABEL" description="COM_COMPETITIONS_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

	</fieldset>
</form>
